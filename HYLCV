<script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- Accordion Logic for Main Categories ---
        document.querySelectorAll('.category-toggle-btn').forEach(button => {
            button.addEventListener('click', (e) => {
                const header = e.currentTarget;
                const content = header.nextElementSibling;
                if (!content) return; // Error guard

                const buttonText = header.querySelector('.toggle-button');
                const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px';

                if (isOpen) {
                    content.style.maxHeight = '0px';
                    if (buttonText) buttonText.textContent = 'View';
                } else {
                    content.style.maxHeight = content.scrollHeight + 'px';
                    if (buttonText) buttonText.textContent = 'Hide';
                }
            });
        });

        // --- Accordion Logic for Individual Projects ---
        document.querySelectorAll('.project-toggle-btn').forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation(); 
                const projectItem = button.closest('.project-item');
                if (!projectItem) return;

                const projectContent = projectItem.querySelector('.project-accordion-content');
                const parentCategoryContent = button.closest('.category-accordion-content');
                if (!projectContent || !parentCategoryContent) return; // Error guard

                const wasOpen = projectContent.style.maxHeight && projectContent.style.maxHeight !== '0px';
                
                if (wasOpen) {
                    parentCategoryContent.style.maxHeight = (parentCategoryContent.scrollHeight - projectContent.scrollHeight) + 'px';
                    projectContent.style.maxHeight = '0px';
                    button.textContent = 'View Details';
                } else {
                    const currentParentHeight = parentCategoryContent.scrollHeight;
                    projectContent.style.maxHeight = projectContent.scrollHeight + 'px';
                    const newParentHeight = currentParentHeight + projectContent.scrollHeight;
                    parentCategoryContent.style.maxHeight = newParentHeight + 'px';
                    button.textContent = 'Hide Details';
                }
            });
        });
    });
</script>

</body>
